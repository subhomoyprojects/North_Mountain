{%- render 'common-heading',
  title: section.settings.title,
  subHeading: section.settings.subHeading,
  alignment: section.settings.alignment
-%}

{% schema %}
{
  "name": "Product Card Section",
  "tag": "section",
  "class": "index-product-card-wrapper",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subHeading",
      "label": "Sub Heading"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "Product Card Section"
    }
  ]
}
{% endschema %}
